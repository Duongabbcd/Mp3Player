<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="MusicPlayerTheme" parent="Theme.MusicPlayer">
        <item name="android:windowLightStatusBar">true</item>
        <item name="contentScrim">@color/transparent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="CustomTextStyle">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
